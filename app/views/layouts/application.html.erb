<!DOCTYPE html>
<html>
  <head>
    <title>IgClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
  </head>

  <body>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>

    <% if logged_in? %>
        <a class="nav-link text-dark"><%= link_to "Profile", user_path(current_user.id) %></a>
        <a class="nav-link text-dark"><%= button_to "Logout", session_path(current_user.id), method: :delete %></a>
      <% else %>
        <a class="nav-link text-dark" href="http://localhost:3000/users/new">Sign up</a>
        <a class="nav-link text-dark" href="http://localhost:3000/sessions/new">Login</a>
      <% end %>

      <%= yield %>
  </body>
</html>
